
<%= form_tag do %>
  <% @game.questions.each_with_index do |question, i| %>
    <div class="col-sm-4" >
      <div class="card">
        <h1 class="text"> Question <%= i + 1 %> </h1>
          <%= image_tag question.correct_answer.car.image.url%>
          <% question.answers.each do |answer| %>
            <div>
              <%= radio_button_tag("answers[#{question.id}]", answer.id, answer.checked, class: "animate-text") %>
              <%= label("answer", answer.car.brand + " " + answer.car.model, class: "animate-text") %>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>
  <p>
    <%= submit_tag "Result", class: "btn-primary" %>
  </p>

<% end %>
<div>
  <%= link_to "back to main page", games_path %>
</div>
<p id="notice_#{question.id}"><strong><%= notice %></strong></p>
