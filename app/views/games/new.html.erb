<h1> Choose your level </h1>

<%= form_for @game do |f| %>
  <%= f.radio_button :level , "1" %>
  <%= f.label "1" %>
  <%= f.radio_button :level , "2" %>
  <%= f.label "2" %>
  <%= f.radio_button :level , "3" %>
  <%= f.label "3" %>
  <%= f.submit %>
<% end %>

