    <%= link_to image_tag("cars_btn.png"), cars_path, id: "hamburger_cars" %>
    <div class="container">
      <div class="row">
        <div class="col-lg-11 ">
          <div id="background_title">
            <div class="for_trans_container">
              <div class="wrapper_title">
                Car Quiz
              </div>
            </div>


          </div>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <%= yield %>
        </div>
      </div><!--/row-->
